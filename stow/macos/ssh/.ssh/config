# In ~/.ssh/config
# Don't forward agent here, use the local key installed on the host instead of forwarding ssh-agent. Also ProxyJump does not need ForwardAgent.
# Setup dynamic forwards - fixed control path required for custom proxy bin commands

# Compression yes 
# Compressions can be commented to avoid double compression when forwarding tar archives through pipes

# Work GitHub
# git clone git@github.com-work:sahil-weaver/repo.git
# The above happens via .gitconfig-work
Host github.com-work
  HostName github.com
  User git
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_ed25519_sahil-weaver

Host github.com
  User git
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_ed25519_sahil87

Host *
  ServerAliveInterval 30
  ServerAliveCountMax 60
  ForwardAgent yes
  IdentityFile ~/.ssh/id_ed25519_sahil87

# cinna1 Home development server via tailscale
Host cinna1
  HostName cinna1.home
  User sahil
  Port 22

Host mini
  HostName sahils-mac-mini.bat-ordinal.ts.net
  User sahil
  SetEnv TERM=xterm-256color
  Port 22

Host cinna1-ts
  HostName cinna1.bat-ordinal.ts.net
  User sahil
  Port 22

# Bidadi development server
# 10.0.3.20 running on r3-s3
Host t-dev-sahil t-socks-proxy
  HostName bidadi.gmetri.io
  User gmetri
  Port 2320

Host *.lan
  ProxyJump t-dev-sahil
  User gmetri

Host xfce2
  HostName ubuntu-xfce2.bat-ordinal.ts.net
  User parallels
